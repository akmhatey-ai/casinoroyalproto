generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  username      String?   @unique
  walletSolana  String?   @map("wallet_solana")
  walletEvm     String?   @map("wallet_evm")
  earningsCents Int       @default(0) @map("earnings_cents")
  referralCode  String?   @unique @map("referral_code")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts     Account[]
  sessions     Session[]
  prompts      Prompt[]
  skills       Skill[]
  items        Item[]
  transactions Transaction[]
  submissions  Submission[]
  votes        Vote[]

  @@index([walletSolana])
  @@index([walletEvm])
  @@map("users")
}

model Item {
  id            String   @id @default(cuid())
  type          String   // mcp | skill | prompt | tool
  name          String
  slug          String   @unique
  description   String   @db.Text
  content       String?  @db.Text
  configJson    Json?    @map("config_json")
  installUrl    String?  @map("install_url")
  repoUrl       String?  @map("repo_url")
  authorId      String?  @map("author_id")
  walletSolana  String?  @map("wallet_solana")
  walletEvm     String?  @map("wallet_evm")
  priceUsdCents Int?     @map("price_usd_cents")
  isFree        Boolean  @default(true) @map("is_free")
  downloads     Int      @default(0)
  tags          String[] @default([])
  status        String   @default("pending") // draft | pending | approved | rejected
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  author User? @relation(fields: [authorId], references: [id], onDelete: SetNull)

  @@index([type, status])
  @@index([slug])
  @@index([authorId])
  @@map("items")
}

model Tip {
  id          String   @id @default(cuid())
  fromWallet  String   @map("from_wallet")
  toWallet    String   @map("to_wallet")
  amountCents Int      @map("amount_cents")
  chain       String   // solana | evm
  txHash      String?  @map("tx_hash")
  itemId      String?  @map("item_id")
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([toWallet])
  @@map("tips")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at       Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Prompt {
  id             String   @id @default(cuid())
  title          String
  slug           String   @unique
  description    String
  content        String   @db.Text
  isPremium      Boolean  @default(false) @map("is_premium")
  priceUsdCents  Int?     @map("price_usd_cents")
  submitterId    String   @map("submitter_id")
  status         String   @default("pending") // draft | pending | approved | rejected
  downloads      Int      @default(0)
  category       String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  submitter User @relation(fields: [submitterId], references: [id], onDelete: Cascade)

  @@index([slug])
  @@index([submitterId])
  @@index([status])
  @@map("prompts")
}

model Skill {
  id             String   @id @default(cuid())
  name           String
  slug           String   @unique
  description    String
  skillMd        String   @db.Text @map("skill_md")
  integrations   Json?    // { compatibleAgents: [], allowedTools: [] }
  submitterId    String   @map("submitter_id")
  status         String   @default("pending")
  downloads      Int      @default(0)
  isPremium      Boolean  @default(false) @map("is_premium")
  priceUsdCents  Int?     @map("price_usd_cents")
  category       String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  submitter User @relation(fields: [submitterId], references: [id], onDelete: Cascade)

  @@index([slug])
  @@index([submitterId])
  @@index([status])
  @@map("skills")
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  itemType  String   @map("item_type") // prompt | skill | tip
  itemId    String   @map("item_id")
  amountCents Int    @map("amount_cents")
  chain     String   // solana | evm
  txHash    String?  @map("tx_hash")
  status    String   @default("pending") // pending | completed | failed
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("transactions")
}

model Submission {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  itemType  String   @map("item_type") // prompt | skill
  itemId    String   @map("item_id")
  status    String   @default("pending") // pending | approved | rejected
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("submissions")
}

model Vote {
  id       String   @id @default(cuid())
  userId   String   @map("user_id")
  itemType String   @map("item_type") // prompt | skill
  itemId   String   @map("item_id")
  value    Int      // 1 for upvote, or 1-5 rating
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, itemType, itemId])
  @@index([itemType, itemId])
  @@map("votes")
}
